<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/diloag_designs">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="1dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user_photo"
                app:civ_border_color="@color/silverColor"
                app:civ_border_width="1dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:background="@drawable/dialog_design">
            <tech.iwish.taxi.extended.TextViewFont
                android:id="@+id/name_drivers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:gravity="center"
                android:text="name"
                android:layout_marginTop="60dp"
                android:textSize="18sp" />
            <tech.iwish.taxi.extended.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:gravity="center"
                android:text="MPO7 kk 2211"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/car_image"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>
            <tech.iwish.taxi.extended.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="O t p"
                android:textColor="@color/whiteColor"
                android:textSize="12sp"
                app:fonttype="font10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/otp_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:textSize="20sp"
                    android:text="5"
                    android:background="@drawable/circule_otp"/>

                <TextView
                    android:id="@+id/otp_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:textSize="20sp"
                    android:text="5"
                    android:background="@drawable/circule_otp"/>

                <TextView
                    android:id="@+id/otp_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:text="5"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/circule_otp"/>

                <TextView
                    android:id="@+id/otp_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:textSize="20sp"
                    android:text="5"
                    android:background="@drawable/circule_otp"/>
            </LinearLayout>
            <tech.iwish.taxi.extended.TextViewFont
                android:id="@+id/call_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_design"
                android:gravity="center"
                android:text="Call Driver"
                android:padding="4dp"
                android:textColor="@color/blackColor"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                app:fonttype="font10" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>