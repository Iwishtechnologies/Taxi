<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_design"
    android:layout_margin="5dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/user_photo"
            app:civ_border_color="@color/silverColor"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/name_drivers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:text="name"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangeColor"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <tech.iwish.taxi.extended.TextViewFont
                android:id="@+id/call_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_design"
                android:gravity="center"
                android:visibility="gone"
                android:text="Call Driver"
                android:padding="5dp"
                android:textColor="@color/blackColor"
                android:textSize="16sp"
                app:fonttype="font10" />

            <tech.iwish.taxi.extended.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8871121959"
                android:padding="5dp"
                android:textColor="@color/blackColor"
                android:textSize="16sp"
                app:fonttype="font10" />

            <tech.iwish.taxi.extended.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="Otp"
                android:textColor="@color/whiteColor"
                android:textSize="12sp"
                app:fonttype="font10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/otp_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:textSize="20sp"
                    android:text="5"
                    android:background="@drawable/circule_otp"/>

                <TextView
                    android:id="@+id/otp_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:textSize="20sp"
                    android:text="5"
                    android:background="@drawable/circule_otp"/>

                <TextView
                    android:id="@+id/otp_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:text="5"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/circule_otp"/>

                <TextView
                    android:id="@+id/otp_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:textSize="20sp"
                    android:text="5"
                    android:background="@drawable/circule_otp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


</LinearLayout>