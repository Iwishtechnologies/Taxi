<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SupportFragmnet"
    android:background="@color/whiteColor"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <tech.iwish.taxi.extended.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call"
                app:fonttype="font5"
                android:textColor="@color/blackColor"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@drawable/support_design"
                android:padding="10dp">

                <tech.iwish.taxi.extended.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234567899"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp"
                    app:fonttype="font5"
                    android:layout_weight="1"/>
                <tech.iwish.taxi.extended.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message us"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    app:fonttype="font5"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/silverColor"
                android:layout_marginTop="20dp"/>

            <tech.iwish.taxi.extended.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Issuse?"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/blackColor"
                app:fonttype="font5"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:background="@drawable/support_design">
                <tech.iwish.taxi.extended.EditTextFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Write here..."
                    android:backgroundTint="@color/whiteColor"
                    android:textColor="@color/blackColor"
                    app:fonttype="font5"
                    android:inputType="text|textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wallet_button"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:gravity="center"
                    android:text="Submit">
                </Button>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>





















